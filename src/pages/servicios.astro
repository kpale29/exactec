---
import Layout from "../layouts/Layout.astro";
import ServiciosList from "../components/Servicios/ServiciosList.astro";
import ServiciosMaintenance from "../components/Servicios/ServiciosMaintenance.astro";
---

<Layout title="Welcome to Astro.">
  <main class="md:grid md:grid-cols-2 bg-secondary-bg lg:grid-rows-2">
    <ServiciosList/>

    <section class="pt-8 md:pt-[82px] md:mr-20 lg:row-span-2">
      <figure class="flex justify-center">
        <img class="w-[305px] md:w-[328px] lg:w-[400px]" src=`/assets/img-servicios.png` alt="Logo" />
      </figure>
    </section>

    <ServiciosMaintenance/>
  </main>
</Layout>