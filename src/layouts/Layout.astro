---
export interface Props {
	title: string;
}

const { title } = Astro.props;


---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<nav id="header-nav">
			<img id="header-logo" src=`./logo.png` alt="Logo" />
			<ul id="item-list">
				<li class="nav-item"><a href="/exactec.github.io/">Inicio</a></li>
				<li class="nav-item"><a href="/exactec.github.io/marcas">Marcas</a></li>
				<li class="nav-item"><a href="/exactec.github.io/productos">Productos</a></li>
				<li class="nav-item"><a href="/exactec.github.io/contacto">Cont√°ctenos</a></li>  
			</ul>
			<div id="search-form">
				<input id="search-input" type="text" placeholder="Buscar producto" />
				<i class="material-icons icon">search</i>
			</div>
		  </nav>
		<slot />
	</body>
</html>
<style is:global>

	@import '../_astro.css';
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
	}
	html {
		font-family: system-ui, sans-serif;
		background-color: #F6F6F6;
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}

	#header-nav{
		background: #FFF;
		box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.05);
		width: 100%;
		display: flex;
		align-items: center;
		justify-content:  space-between;
	}
	
	#item-list {
		margin-left: 600px;
		display: flex;
		list-style: none;
		padding: 0;
	}

	#header-logo{
		margin-left: 100px;
	}

	.nav-item{
		margin-right: 45px;
	}
	.nav-item a{
		text-decoration: none;
		color: inherit;
	}
	#search-form{
		border-radius: 19.808px;
		border: 0.5px solid rgba(0, 0, 0, 0.20);
		background: #FFF;
		position: relative;
		display: flex;
		margin-right: 100px;
	}

	#search-input{
		border: none;
		text-align: left;
		padding: 5px 0 5px 15px;
		display: block;
		width: 100%;
		height: 100%;
		background-color: transparent;
	}

	#search-input:focus{
		outline: none;
	}

	.icon{
		color: #2F2F2F;
	}

</style>