---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <script>
        document.querySelector('.nav-icon3').addEventListener('click', () => {
          document.querySelector('.nav-icon3').classList.toggle('open');
        });
      </script>
      <nav
        class="shadow-md min-w-[375px] w-full h-28 flex justify-between items-center px-[35px] md:px-[81px] bg-secondary-bg"
      >
        <figure class="w-[113px]">
          <img class="w-full" src=`logo.png` alt="Logo" />
        </figure>

        <div class="flex justify-center items-center">
          <div class="hidden lg:block">
            <ul class="flex list-none p-0">
              <li class="me-[45px]">
                <a class="decoration-none text-inherit" href="/"
                  >Inicio</a
                >
              </li>
              <li class="me-[45px]">
                <a
                  class="decoration-none text-inherit"
                  href="/productos">Productos</a
                >
              </li>
              <li class="me-[45px]">
                <a
                  class="decoration-none text-inherit"
                  href="/servicios">Servicios</a
                >
              </li>
              <li class="me-[45px]">
                <a class="decoration-none text-inherit" href="/contacto"
                  >Contáctenos</a
                >
              </li>
            </ul>
          </div>

          <div
            class="hidden lg:block rounded-2xl border relative flex px-[10px]"
          >
            <input
              class="focus:outline-none"
              type="text"
              placeholder="Buscar producto"
            />
            <i class="material-icons icon">search</i>
          </div>

          <div class="lg:hidden">
            <div
              class="nav-icon3 w-[40px] h-[45px] transform rotate-0 transition duration-[.5s] ease-in-out cursor-pointer mt-5 ms-3"
            >
              <span
                class="bg-primary-text/50 block absolute h-[5px] w-full rounded-9 opacity-100 left-0 transform rotate-0 transition duration-[.25s] ease-in-out"
              ></span>
              <span
                class="bg-primary-text/50 block absolute h-[5px] w-full rounded-9 opacity-100 left-0 transform rotate-0 transition duration-[.25s] ease-in-out"
              ></span>
              <span
                class="bg-primary-text/50 block absolute h-[5px] w-full rounded-9 opacity-100 left-0 transform rotate-0 transition duration-[.25s] ease-in-out"
              ></span>
              <span
                class="bg-primary-text/50 block absolute h-[5px] w-full rounded-9 opacity-100 left-0 transform rotate-0 transition duration-[.25s] ease-in-out"
              ></span>
            </div>
          </div>
        </div>
      </nav>
    </header>

    <slot />

    <footer class="h-[595px] w-full md:h-[355px]">
      <div
        class="flex flex-col md:px-[90px] px-9 py-12 justify-between md:justify-items-center md:items-center bg-primary-bg h-full w-full md:grid md:grid-cols-3 md:gap-3"
      >
        <figure class="w-[304px] md:w-[211px]">
          <img class="w-full" src=`img-logo.png` alt="Logo" />
        </figure>

        <ul class="[&>li]:mb-1">
          <li><a href="/productos"> Productos</a></li>
          <li><a href="/servicios"> Servicios</a></li>
          <li><a href="/contacto"> Contáctenos</a></li>
        </ul>

        <ul class="[&>li]:mb-1">
          <li><p>Info</p></li>

          <li class="flex">
            <figure class="w-[27px] me-[10px]">
              <img class="w-full" src=`icono-mail.svg` alt="Logo" />
            </figure><p>info@exactec.com.gt</p>
          </li>

          <li class="flex">
            <figure class="w-[27px] me-[10px]">
              <img class="w-full" src=`icono-tel.svg` alt="Logo" />
            </figure><p>(+502) 5755 - 8774</p>
          </li>
        </ul>
        <p class="pe-7 md:pe-0 col-span-2 md:justify-self-start">
          Todos los derechos reservados, Exactitud y Tecnología.
        </p>
        <p class="">www.exactec.com.gt</p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import '../_astro.css';
  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      #da62c4 30%,
      white 60%
    );
  }
  html {
    font-family: system-ui, sans-serif;
    background-color: #f6f6f6;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  .nav-icon3 .nav-icon3.open {
    -webkit-tap-highlight-color: transparent;
  }

  .nav-icon3 span:nth-child(1) {
    top: 0px;
  }

  .nav-icon3 span:nth-child(2),
  .nav-icon3 span:nth-child(3) {
    top: 10px;
  }

  .nav-icon3 span:nth-child(4) {
    top: 20px;
  }

  .nav-icon3.open span:nth-child(1) {
    top: 18px;
    width: 0%;
    left: 50%;
  }

  .nav-icon3.open span:nth-child(2) {
    -webkit-transform: rotate(45deg);
    -moz-transform: rotate(45deg);
    -o-transform: rotate(45deg);
    transform: rotate(45deg);
  }

  .nav-icon3.open span:nth-child(3) {
    -webkit-transform: rotate(-45deg);
    -moz-transform: rotate(-45deg);
    -o-transform: rotate(-45deg);
    transform: rotate(-45deg);
  }

  .nav-icon3.open span:nth-child(4) {
    top: 18px;
    width: 0%;
    left: 50%;
  }
</style>
